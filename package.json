{
  "name": "yetzirah",
  "version": "0.1.0",
  "private": true,
  "description": "AI-native, unstyled Web Components with Material behavior.",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:cdn": "pnpm --filter @grimoire/yetzirah-core build:cdn",
    "test": "pnpm test:core && pnpm test:vue && pnpm test:svelte && pnpm test:angular",
    "test:core": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "test:vue": "pnpm --filter @grimoire/yetzirah-vue test",
    "test:svelte": "pnpm --filter @grimoire/yetzirah-svelte test",
    "test:angular": "pnpm --filter @grimoire/yetzirah-angular test",
    "lint": "eslint packages/*/src/**/*.js",
    "format": "prettier --write \"packages/*/src/**/*.js\"",
    "clean": "pnpm -r exec rm -rf dist",
    "size": "pnpm build && node scripts/check-size.js",
    "size:report": "pnpm build && node scripts/check-size.js --report",
    "check-size": "node scripts/check-size.js",
    "verify-bundles": "pnpm build && node scripts/check-size.js --generate-report",
    "analyze-bundle": "node scripts/analyze-bundle.js",
    "analyze-bundle:report": "node scripts/analyze-bundle.js --report",
    "perf": "node scripts/perf-test.js",
    "perf:report": "node scripts/perf-test.js --report --throttle",
    "perf:baseline": "node scripts/perf-test.js --baseline",
    "perf:ci": "node scripts/perf-test.js --ci --throttle",
    "test:cdn": "playwright test tests/cdn",
    "test:cdn:ui": "playwright test tests/cdn --ui",
    "test:cdn:headed": "playwright test tests/cdn --headed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grimoire-intelligence/yetzirah.git"
  },
  "keywords": [
    "material",
    "ui",
    "web",
    "components",
    "ai",
    "accessibility",
    "grimoire"
  ],
  "author": "Grimoire Intelligence",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/grimoire-intelligence/yetzirah/issues"
  },
  "homepage": "https://github.com/grimoire-intelligence/yetzirah#readme",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^29.5.12",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "serve": "^14.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0"
}
